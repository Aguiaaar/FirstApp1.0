<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivFeminino"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="Feminino"
                android:visibility="gone"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                app:srcCompat="@drawable/simbolo_feminino_svg"
                />

            <ImageView
                android:id="@+id/ivMasculino"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:text="Masculino"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                app:srcCompat="@drawable/sexo_masculino_svg"/>
            <TextView
                android:id="@+id/lblNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: "
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tvNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ana Laura"
                />


            <TextView
                android:id="@+id/lblIdade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idade: "
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="15dp" />
            <TextView
                android:id="@+id/tvIdade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/lblFaixaEtaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faixa EtÃ¡ria: "
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tvFaixaEtaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adolescente"
                />



        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>