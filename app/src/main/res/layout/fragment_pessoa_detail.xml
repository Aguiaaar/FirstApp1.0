<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.PessoaDetailFragment"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvNome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:textSize="20sp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/tvNome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ana Laura"
        app:layout_constraintStart_toEndOf="@id/tvNome1"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvIdade1"
        android:text="Idade:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvNome1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvIdade2"
        android:text="17"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvNome1"
        app:layout_constraintStart_toEndOf="@id/tvIdade1"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvGenero1"
        android:text="Gênero:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvIdade1"/>
    <ImageView
        android:id="@+id/ivFeminino"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/tvGenero1"
        app:layout_constraintTop_toBottomOf="@id/tvIdade2"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/simbolo_feminino_svg"
        />

    <ImageView
        android:id="@+id/ivMasculino"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text="Masculino"
        app:layout_constraintStart_toEndOf="@id/tvGenero1"
        app:layout_constraintTop_toBottomOf="@id/tvIdade2"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        android:visibility="gone"
        android:src="@drawable/sexo_masculino_svg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFaixaEtaria1"
        android:text="Faixa etária:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvGenero1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFaixaEtaria2"
        android:text="Adolescente"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tvFaixaEtaria1"
        app:layout_constraintTop_toBottomOf="@id/tvGenero1"
        android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>